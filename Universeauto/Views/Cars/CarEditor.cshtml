@model Car
<div>
<div class="row p-2">
    <div class="col row-cols-1">
            <label asp-for="Id">#</label>

        <input asp-for="Id" readonly />
    </div>
    <div class="col">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <div class="col">
            <label asp-for="GovNomber">ГосНомер</label>

        <input asp-for="GovNomber" class="form-control"/>
    </div>
    <div class="col">


    </div>
    <div class="col">
        @if (Model.Id == 0)
        {
            <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i></button>
        }
        else
        {
            <button type="submit" class="btn btn-outline-primary"><i class="fa fa-save"></i></button>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-times"></i></a>
        }
    </div>
</div>
</div>


