@model Customer
@{
    var CustomerCars = ViewData["Cars"] as List<Car>;
}

<h3 class="p-2 text-center text-white bg-primary">Клиент</h3>
<form asp-action="AddOrUpdateCustomer">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <h6 class="mt-1 p-2 bg-primary text-white text-center">Машины клиента</h6>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название</th>
                <th scope="col">ГосНомер</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Cars == null)
            {
                <tr>
                    <td>
                        У клиента нет машин
                    </td>
                </tr>
            }
            else
            {
                foreach (Car car in CustomerCars)
                {

                    <tr>
                        <th scope="row"><a href="@Url.Action("Test","Cars")"> @car.Id</a></th>
                        <td class="col">@car.Name</td>
                        <td class="col">@car.GovNomber</td>
                    </tr>

                }
            }

        </tbody>
    </table>
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-danger">Отмена</a>
    </div>
</form>