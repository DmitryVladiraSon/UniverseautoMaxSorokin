@model IEnumerable<Customer>


<div class="table-responsive">

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col-4">Имя</th>
            <th scope="col">Телефон</th>
            <th scope="col">Машина</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Customer c in Model)
        {
            @if (c.Id == ViewBag.Id)
            {
                <form asp-action="UpdateCustomer" method="post">
                    <input type="hidden" name="Id" value="@c.Id" />
                    @Html.Partial("CustomerEditor", c)
                </form>
            }
            else
            {
                <tr>
                    <th scope="row">@c.Id</th>
                    <td  >@c.Name</td>
                    <td  >+7 @c.Phone</td>
                    <td  >@foreach(var car in c.Cars)
                        { <p>@car.Name -  @car.GovNomber</p> }</td>
                    <td>

                        <form asp-action="DeleteCustomer" method="post">
                            <input type="hidden" name="Id" value="@c.Id" />
                            <a asp-action="EditCustomer" asp-route-id="@c.Id"
                       class="btn btn-outline-primary">
                                Edit
                            </a>
                            <button type="submit" class="btn btn-outline-danger">
                                    <i class="fa fa-trash"></i>

                            </button>
                        </form>
                    </td>
                </tr>
            }

        }

    </tbody>
</table>
</div>
<div class="text-center p-2">
    <a asp-action="EditCustomer"
       class="btn btn-primary">Добавить</a>
</div>

